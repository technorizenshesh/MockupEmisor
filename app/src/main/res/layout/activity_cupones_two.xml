<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/rounded_light_black_bg">


            <RelativeLayout
                android:id="@+id/layoutOne"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_5sdp"

                >


                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"

                    android:src="@drawable/ic_back" />




                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/_7sdp"
                    app:cardCornerRadius="@dimen/_30sdp"
                    app:cardElevation="@dimen/_2sdp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_btn"
                        android:fontFamily="@font/irc_demi"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@string/help"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_12sdp" />


                </androidx.cardview.widget.CardView>


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:fontFamily="@font/irc_demi"
                android:text="@string/cupones"
                android:textColor="@color/color_btn"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/ivDetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_below="@+id/header"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:src="@drawable/ic_cupons_one" />



        <LinearLayout
            android:layout_below="@+id/ivDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/irc_demi"
                android:text="Vigencia"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="@dimen/_3sdp"
                   android:background="@drawable/rounded_white_gray_second_bg"
                   android:padding="@dimen/_5sdp">


                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">


                       <TextView
                           android:layout_centerVertical="true"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/_5sdp"
                           android:fontFamily="@font/irc_demi"
                           android:text="Vigencia hasta"
                           android:textColor="@color/color_light_gray"
                           android:textSize="@dimen/_9sdp"
                           android:textStyle="bold" />


                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:layout_centerInParent="true"
                           android:layout_centerHorizontal="true"
                           android:layout_marginEnd="@dimen/_5sdp"
                           android:fontFamily="@font/irc_demi"
                           android:text="29/11/2020 - 11:59:59 pm"
                           android:textColor="@color/color_light_gray"
                           android:textSize="@dimen/_9sdp"
                           android:textStyle="bold" />


                   </RelativeLayout>


                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_2sdp">


                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginStart="@dimen/_5sdp"
                           android:fontFamily="@font/irc_demi"
                           android:text="Día(s) de vigencia"
                           android:textColor="@color/color_light_gray"
                           android:textSize="@dimen/_9sdp"
                           android:textStyle="bold" />


                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:layout_centerInParent="true"
                           android:layout_centerHorizontal="true"
                           android:layout_marginEnd="@dimen/_5sdp"
                           android:fontFamily="@font/irc_demi"
                           android:text="Lun.,mar.,mié.,jue.,vie.,sáb.,dom."
                           android:textColor="@color/color_light_gray"
                           android:textSize="@dimen/_9sdp"
                           android:textStyle="bold" />


                   </RelativeLayout>




               </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/irc_demi"
                android:text="Solicitud de viaje"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/rounded_white_gray_second_bg"
                android:padding="@dimen/_5sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/irc_demi"
                        android:text="Vigencia hasta"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/irc_demi"
                        android:text="29/11/2020 - 11:59:59 pm"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />


                </RelativeLayout>






            </LinearLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/irc_demi"
                android:text="Descuento y pago"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/rounded_white_gray_second_bg"
                android:padding="@dimen/_5sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/irc_demi"
                        android:text="Descuento"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/irc_demi"
                        android:text="15%OFF"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/irc_demi"
                        android:text="Tarifa mínima"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/irc_demi"
                        android:text="$1"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/irc_demi"
                        android:text="Forma de pago "
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/irc_demi"
                        android:text="Pago efectivo, Pago con tarjeta"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />


                </RelativeLayout>




            </LinearLayout>




        </LinearLayout>






    </RelativeLayout>

</layout>
