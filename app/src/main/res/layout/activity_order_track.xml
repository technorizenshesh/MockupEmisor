<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/rounded_light_black_bg">


                <RelativeLayout
                    android:id="@+id/layoutOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"

                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp">


                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"

                        android:src="@drawable/ic_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"

                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_toLeftOf="@+id/btHelp"
                        android:fontFamily="@font/irc_demi"
                        android:text="ESTADO DEL MANDADO"
                        android:textColor="@color/color_btn"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/btHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/_30sdp"
                        app:cardElevation="@dimen/_2sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_btn"
                            android:fontFamily="@font/irc_demi"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="@string/help"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_12sdp" />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutOne"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/irc_demi"
                    android:gravity="center_horizontal"
                    android:text="Aquí puedes ver el avance y el estado de
\ntu mandado"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />


            </RelativeLayout>


              <LinearLayout
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:fontFamily="@font/irc_demi"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="Información del mandado"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_weight=".32"
                    android:gravity="center"
                    android:background="@drawable/rounded_white_gray_second_bg">


                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_hand"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".68"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5sdp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/irc_demi"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:text="Código del mandado"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:textColor="@color/color_black_light"
                        android:textSize="@dimen/_11sdp" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/irc_demi"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:text="P1258"
                        android:paddingTop="@dimen/_3sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:background="@drawable/rounded_white_gray_bg"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/color_black_light"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/irc_demi"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:text="BOG-TUN"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/color_black_light"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp" />


                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_bar"/>


                </LinearLayout>



            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@drawable/doted_line"
                android:layout_marginTop="@dimen/_10sdp"/>


              </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:fontFamily="@font/irc_demi"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:text="Estado del mandado"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_15sdp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:weightSum="1"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_weight=".2"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_order_one"
                        android:layout_gravity="center_horizontal"/>




                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="#D5D5D5"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-3dp"/>





                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_order_two"
                        android:layout_gravity="center_horizontal"/>



                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="#D5D5D5"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-3dp"/>




                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_order_three"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/irc_demi"
                                android:layout_centerVertical="true"
                                android:text="Mandado recibido"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_11sdp" />



                            <androidx.cardview.widget.CardView
                                android:id="@+id/btnDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:visibility="visible"
                                app:cardCornerRadius="@dimen/_30sdp"
                                app:cardElevation="@dimen/_2sdp">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_black_light"
                                    android:fontFamily="@font/irc_demi"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_2sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:text="Ver detalle"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_9sdp" />

                            </androidx.cardview.widget.CardView>


                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:fontFamily="@font/irc_demi"
                                android:text="Bogotá D.C"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_9sdp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/irc_demi"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:text="Junio 10"
                                android:textColor="#D5D5D5"
                                android:layout_marginEnd="@dimen/_25sdp"
                                android:textSize="@dimen/_9sdp" />


                        </RelativeLayout>




                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_45sdp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/irc_demi"
                                android:layout_centerVertical="true"
                                android:text="Mandado en camino"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_11sdp" />






                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:fontFamily="@font/irc_demi"
                                android:text="Ruta nacional"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_9sdp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/irc_demi"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:text="Junio 10"
                                android:textColor="#D5D5D5"
                                android:layout_marginEnd="@dimen/_25sdp"
                                android:textSize="@dimen/_9sdp" />


                        </RelativeLayout>




                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_47sdp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:fontFamily="@font/irc_demi"
                                android:text="Mandado entregado"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_11sdp" />






                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:fontFamily="@font/irc_demi"
                                android:text="Tunja, Boyacá"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_9sdp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/irc_demi"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:text="Junio 10"
                                android:textColor="#D5D5D5"
                                android:layout_marginEnd="@dimen/_25sdp"
                                android:textSize="@dimen/_9sdp" />


                        </RelativeLayout>




                    </LinearLayout>




                </LinearLayout>





            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</layout>