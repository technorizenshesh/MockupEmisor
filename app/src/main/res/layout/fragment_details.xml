<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_two_bg"
        >

        <RelativeLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            >

            <View
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_3sdp"
                android:layout_alignParentTop="true"
                android:background="@color/color_black_light"/>


            <LinearLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="@drawable/rounded_gray_bg"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehículo"
                    android:fontFamily="@font/irc_demi"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/color_black_light"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/irc_demi"
                    android:text="$ 20.000"
                    android:textColor="@color/color_dark_gray"
                    android:textSize="@dimen/_8sdp" />





            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutVisa"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                >


                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_visa"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/irc_demi"
                    android:text="..567"
                    android:gravity="center"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/_8sdp" />





            </LinearLayout>







        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp">



            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/irc_demi"
                    android:singleLine="true"
                    android:text="Viajero: "
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/_14sdp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/irc_demi" android:singleLine="true"
                android:text="David Rodriguez"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/irc_demi"
                android:singleLine="true"
                android:text="Puntaje: "
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/irc_demi" android:singleLine="true"
                android:text="5"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/irc_demi"
                android:singleLine="true"
                android:text="Placa de vehículo: "
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/irc_demi" android:singleLine="true"
                android:text="FHG578"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/irc_demi"
                android:singleLine="true"
                android:text="Tipo de vehículo: "
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/irc_demi" android:singleLine="true"
                android:text="Camioneta"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/irc_demi"
                android:singleLine="true"
                android:text="Dirección: "
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/irc_demi" android:singleLine="true"
                android:text="Calle 13 #147-2"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/irc_demi"
                android:singleLine="true"
                android:text="Fecha de salida: "
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/irc_demi" android:singleLine="true"
                android:text="29/06/21"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/irc_demi"
                android:singleLine="true"
                android:text="Hora de salida: "
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_14sdp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/irc_demi" android:singleLine="true"
                android:text="2:00 p.m"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:orientation="horizontal"
            android:weightSum="1">


            <androidx.cardview.widget.CardView
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                app:cardCornerRadius="@dimen/_30sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_black_light"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="ACEPTAR SERVICIO"
                    android:textAlignment="center"
                    android:textColor="@color/color_btn"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                app:cardCornerRadius="@dimen/_30sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_black_light"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="CANCELAR SERVICIO"
                    android:textAlignment="center"
                    android:textColor="@color/color_btn"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>




    </LinearLayout>
</layout>
