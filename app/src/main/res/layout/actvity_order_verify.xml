<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/rounded_light_black_bg">


                <RelativeLayout
                    android:id="@+id/layoutOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"

                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp">


                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"

                        android:src="@drawable/ic_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_toLeftOf="@+id/btHelp"
                        android:fontFamily="@font/irc_demi"
                        android:text="VERIFICACIÓN"
                        android:textColor="@color/color_btn"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/btHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/_30sdp"
                        app:cardElevation="@dimen/_2sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_btn"
                            android:fontFamily="@font/irc_demi"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="@string/help"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_12sdp" />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutOne"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/irc_demi"
                    android:gravity="center_horizontal"
                    android:text="Este es el PIN de seguridad que debes enviar a tu receptor
para"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />


            </RelativeLayout>


            <LinearLayout
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:fontFamily="@font/irc_demi"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:text="Validar mandado"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/_14sdp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:layout_weight=".32"
                        android:gravity="center"
                        android:background="@drawable/rounded_white_gray_second_bg">


                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/ic_hand"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".68"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/irc_demi"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            android:text="Código del mandado"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:textColor="@color/color_black_light"
                            android:textSize="@dimen/_11sdp" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/irc_demi"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            android:text="P1258"
                            android:paddingTop="@dimen/_3sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:background="@drawable/rounded_white_gray_bg"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:textColor="@color/color_black_light"
                            android:textSize="@dimen/_11sdp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/irc_demi"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            android:text="BOG-TUN"
                            android:layout_margin="@dimen/_2sdp"
                            android:textColor="@color/color_black_light"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp" />


                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_bar"
                            app:tint="@color/color_btn" />


                    </LinearLayout>



                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@drawable/doted_line"
                    android:layout_marginTop="@dimen/_10sdp"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_15sdp"

                android:gravity="center">



                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/ic_right"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/irc_demi"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="“Consulte aquí su formato de
mandado y su PIN de Seguridad
para finalizar el servicio.
Este código se debe digitar al
recibir el mandado”."
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/_12sdp" />



            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@drawable/doted_line"
                android:layout_margin="@dimen/_10sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:fontFamily="@font/irc_demi"
                android:gravity="center_horizontal"
                android:text="PIN de seguridad"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="1">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".01"
                    />



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    >

                    <EditText
                        android:id="@+id/ed1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/irc_demi"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="1"
                        android:background="@drawable/rounded_color_green_light_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".06"
                    />



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    >

                    <EditText
                        android:id="@+id/ed2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/irc_demi"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="1"
                        android:background="@drawable/rounded_color_green_light_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".06"
                    />



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    >

                    <EditText
                        android:id="@+id/ed3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/irc_demi"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="1"
                        android:background="@drawable/rounded_color_green_light_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".06"
                    />



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    >

                    <EditText
                        android:id="@+id/ed4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/irc_demi"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="1"
                        android:background="@drawable/rounded_color_green_light_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".01"
                    />



            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@drawable/doted_line"
                android:layout_margin="@dimen/_10sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:fontFamily="@font/irc_demi"
                android:gravity="center_horizontal"
                android:text="Formato del Mandado"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />



            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/ic_terms_conditions"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_25sdp"/>



            <androidx.cardview.widget.CardView
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_30sdp"
                app:cardElevation="@dimen/_2sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_black_light"
                    android:fontFamily="@font/irc_demi"
                    android:gravity="center"
                    android:text="VERIFICAR Y CONTINUAR"
                    android:textColor="@color/color_btn"
                    android:textSize="@dimen/_12sdp" />


            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>

</layout>